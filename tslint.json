{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "semicolon": [true, "never"],
    "trailing-comma": [true, {"multiline": {
        "objects": "ignore",
        "arrays": "never",
        "functions": "never",
        "typeLiterals": "always"
    }, "singleline": "never"}],
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "defaultSeverity": "error"
}
